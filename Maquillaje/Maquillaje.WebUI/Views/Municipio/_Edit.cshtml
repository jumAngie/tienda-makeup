
<!-- The Modal -->
<div class="modal" id="EditMuni">
    <div class="modal__content">
        <div class="flex items-center px-5 py-5 sm:py-3 border-b border-gray-200">
            <h2 class="font-medium text-base mr-auto">Cree un Municipio</h2>
        </div>

        <div class="p-5 grid grid-cols-12 gap-4 row-gap-3">
            <div class="col-span-12 sm:col-span-12">
                <Form action="@Url.Action("Edit","Municipio")" id="EditMun" method="post">

                    <input type="hidden" id="txtid" name="mun_Id" class="form-control" readonly />

                    <label>Departamento</label>
                    <select id="mun_DepId" name="mun_DepId" class="input w-full border mt-2 flex-1"></select>
                    <label>Municipio</label>
                    <input type="text" id="txtMuni" required name="mun_Descripcion" class="input w-full border mt-2 flex-1" />
                </Form>

            </div>
        </div>
        <div class="px-5 py-3 text-right border-t border-gray-200">
            <button type="button" data-dismiss="modal" class="button w-20 border text-gray-700 mr-1">Cancelar</button>
            <button type="button" onclick="Editar()" class="button w-20 bg-theme-1 text-white">Guardar</button>
        </div>
    </div>
</div>

<script>




    function CargarDatos(mun_Id) {
        $.ajax({
            type: "GET",
            url: "/Municipio/DatosIdMunicipio",
            data: { mun_Id: mun_Id },
            success: function (data) {

                $("#txtid").val(data.mun_Id);
                $("#txtMuni").val(data.mun_Descripcion);
                var deptoId = data.mun_DepId;
                $.ajax({
                    type: "GET",
                    url: "/Municipio/getDepartment",
                    data: "{}",
                    success: function (data) {
                        var s;
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].dep_ID + '" >' + data[i].dep_Descripcion + '</option>';
                        }
                        $("#mun_DepId").html(s);
                        $("#mun_DepId").val(deptoId);
                    }
                });
            }
        });
    }


    function Editar() {
        var id = $('#mun_DepId').val();
        var id2 = $('#txtMuni').val();
        var id3 = $('#txtid').val();
        $.ajax({
            url: "/Municipio/Edit",
            type: 'POST',
            data: { mun_Id: id3, mun_DepId: id, mun_Descripcion: id2 },
            success: function (result) {
                if (result.success && result.Editar) {
                    $('#EditMun').submit();
                    mostrarSuccessToast("Se ha ingresado correctamente.")
                }
                else {
                    $("#txtid").val(result.mun_Id);
                    $('#txtMuni').val(result.mun_Descripcion);
                    $('#mun_DepId').val(result.mun_DepId);
                }
            }
        });
    }
</script>