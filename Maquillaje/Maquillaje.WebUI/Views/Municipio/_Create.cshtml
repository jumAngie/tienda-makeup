
<Form action="@Url.Action("Create","Municipio")" id="createmuni" method="post">

    <div class="modal fade" id="CreateMuni" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">Cree una categoría</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <br />
                    <div class="row">
                        <div class="col-sm-6">
                            <label>Departamento</label>
                            <select id="depto" name="mun_DepId" class="form-control" asp-items="ViewBag.depto"></select>
                        </div>


                        <div class="col-sm-6">
                            <label>Descripcion</label>
                            <input type="text" class="form-control" id="mun" name="mun_Descripcion" />
                        </div>
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-outline-danger">Cancelar</button>
                    <button type="button" onclick="GuardarInsert()" class="btn btn-outline-success">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</Form>



<script>

    function GuardarInsert() {

        var siuu = true;


        if ($('#mun').val() == "") {
            mostrarErrorToast("Campos requeridos.");
            siuu = false;
            console.log(1);

        }
        if ($('#depto').val() == 0) {
            mostrarErrorToast("Campos requeridos.");
            siuu = false;
            console.log(1);

        }

        if (siuu) {
            $('#createmuni').submit();
            mostrarSuccessToast("Se ha ingresado correctamente los datos.")
        }

    };

</script>

