@model IEnumerable<Maquillaje.WebUI.Models.MunicipiosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header">
                    <a class="btn btn-primary btn-icon-text" data-toggle="modal" data-target="#CreateMuni">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Nuevo
                    </a>

                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm table-light" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_depID)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_depID)
                                    </td>

                                    <td>
                                        <a class="btn btn-warning btn-icon-text" data-toggle="modal" data-target="#EditMuni" onclick="DataEdit('@item.mun_ID')">
                                            <i class="mdi mdi-reload btn-icon-prepend"></i>Editar
                                        </a> |
                                        <a class="btn  btn-success" asp-action="Details" asp-route-id="@item.mun_ID">Detalles</a> |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_Create");
@Html.Partial("_Edit");
