@model IEnumerable<Maquillaje.WebUI.Models.MunicipiosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">


                <div class="card-body">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#CreateMuni">Nuevo</a>
                    <br />
                    <br />

                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mun_depID)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mun_depID)
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-info" data-toggle="modal" data-target="#EditMuni" onclick="Editar('@item.mun_ID,@item.mun_Descripcion')">Editar</a> |
                                        <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.mun_ID">Detalles</a> |
                                        <a class="btn btn-outline-danger" onclick="ShowModal(@item.mun_ID)" data-id="@item.mun_ID">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


@Html.Partial("_Create");
@Html.Partial("_Edit");
