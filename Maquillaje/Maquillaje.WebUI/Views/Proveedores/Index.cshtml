@model IEnumerable<Maquillaje.WebUI.Models.ProveedoresViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (!string.IsNullOrEmpty(ViewBag.SuccessMessageScript))
{
    @Html.Raw(ViewBag.SuccessMessageScript)
}
<br />
<br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Listado Categorías</h3>
                    </div>
                </div>
                <div class="card-body">

                    <a class="btn btn-primary btn-icon-text" asp-action="Create">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Nuevo
                    </a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.prv_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prv_NombreCompañia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prv_NombreContacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prv_TelefonoContacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prv_DireccionEmpresa)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prv_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prv_NombreCompañia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prv_NombreContacto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prv_TelefonoContacto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prv_DireccionEmpresa)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary  btn-icon-text" asp-action="Edit" asp-route-id="@item.prv_ID">
                                            <i class="mdi mdi-reload btn-icon-prepend"></i>Editar
                                        </a> |
                                        <a class="btn btn-primary " asp-action="Details" asp-route-id="@item.prv_ID">Detalles</a> |
                                        <a class="btn btn-primary " onclick="ShowModal(@item.prv_ID)" data-id="@item.prv_ID">Eliminar</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_Delete");
