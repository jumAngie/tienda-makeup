@model IEnumerable<Maquillaje.WebUI.Models.SucursalesViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header">
                    <a class="btn btn-primary btn-icon-text" data-toggle="modal" data-target="#CreateSucu">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Nuevo
                    </a>

                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm table-light" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Id)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Municipio)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Municipio)
                                    </td>
                                    <td>
                                        <button type="button" id="btnEditar" class="btn btn-outline-info" onclick="Editar('@item.suc_Id,@item.suc_Descripcion, @item.suc_Municipio')">Editar</button> |
                                        <a asp-action="Details" asp-route-id="@item.suc_Id">Details</a> |
                                        <a class="btn-delete btn btn-danger" onclick="ShowModal(@item.suc_Id)" data-id="@item.suc_Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@Html.Partial("_Create");
@Html.Partial("_Edit");
@Html.Partial("_Delete");