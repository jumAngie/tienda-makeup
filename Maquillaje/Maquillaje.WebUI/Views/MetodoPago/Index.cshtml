@model IEnumerable<Maquillaje.WebUI.Models.MetodoPagoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Listado Métodos de Pago</h3>
                    </div>
                </div>
                <div class="card-body">

                    <a class="btn btn-primary" data-toggle="modal" data-target="#CreateMet"><i class="icon-copy fa fa-plus" aria-hidden="true"></i> Nuevo</a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.met_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.met_Descripcion)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.met_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.met_Descripcion)
                                    </td>

                                    <td>
                                        <a class="btn btn-primary" data-toggle="modal" data-target="#EditMet" onclick="Editar('@item.met_Id,@item.met_Descripcion')"><i class="icon-copy fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a> |
                                        <a class="btn btn-outline-secondary" style="color: black" asp-action="Details" asp-route-id="@item.met_Id">
                                            <i class="icon-copy fa fa-file-text-o" aria-hidden="true"></i> Detalles
                                        </a> |
                                        <a class="btn btn-outline-success" onclick="ShowModal(@item.met_Id)" data-id="@item.met_Id">
                                            <i class="icon-copy fa fa-trash" aria-hidden="true"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_Create")
@Html.Partial("_Edit")
@Html.Partial("_Delete")