@model Maquillaje.WebUI.Models.ClientesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Cree un Cliente</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" method="post" novalidate>


                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_Nombre" class="text-danger"></span>
                                    <label asp-for="cli_Nombre" class="control-label"></label>
                                    <input asp-for="cli_Nombre" class="form-control" />

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_Apellido" class="text-danger"></span>
                                    <label asp-for="cli_Apellido" class="control-label"></label>
                                    <input asp-for="cli_Apellido" class="form-control" />

                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_DNI" class="text-danger"></span>
                                    <label asp-for="cli_DNI" class="control-label"></label>
                                    <input asp-for="cli_DNI" class="form-control" />
                                    <label class="text-danger">@Html.ValidationMessage("ValidarDNI")</label>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-validation-for="cli_FechaNacimiento" class="text-danger">@Html.ValidationMessage("ValidarFecha")</label>
                                    <label asp-for="cli_FechaNacimiento" class="control-label"></label>
                                    <input type="date" asp-for="cli_FechaNacimiento" class="form-control" />

                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_Sexo" class="text-danger"></span>
                                    <label asp-for="cli_Sexo" class="control-label"></label>
                                    <div class="row">
                                        <div class="col-sm-1"></div>
                                        <label>F</label>
                                        <input type="radio" value="F" asp-for="cli_Sexo" class="form-check-inline" />
                                        <label>M</label>
                                        <input type="radio" value="M" asp-for="cli_Sexo" class="form-check-inline" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_Telefono" class="text-danger"></span>
                                    <label asp-for="cli_Telefono" class="control-label"></label>
                                    <input asp-for="cli_Telefono" class="form-control" />

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-validation-for="depto" class="text-danger">@Html.ValidationMessage("ValidarDep")</label>
                                    <label asp-for="depto" class="control-label"></label>
                                    <select id="depto" name="depto" class="form-control" asp-items="ViewBag.depto"></select>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <span asp-validation-for="cli_Municipio" class="text-danger"></span>
                                    <label asp-for="cli_Municipio" class="control-label"></label>
                                    <select id="cli_Municipio" name="cli_Municipio" asp-for="cli_Municipio" asp-items="ViewBag.Municipio" class="form-control"></select>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-validation-for="cli_EstadoCivil" class="text-danger">@Html.ValidationMessage("ValidarCivil")</label>
                                    <label asp-for="cli_EstadoCivil" class="control-label"></label>
                                    <select asp-for="cli_EstadoCivil" class="form-control" asp-items="ViewBag.cli_EstadoCivil"></select>
                                </div>
                            </div>
                        </div>


                        <div class="card-footer">
                            <div class="text-center">
                                <button class="btn btn-primary" style="color: black" type="submit"> <i class="icon-copy fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                                <a class="btn btn-outline-secondary" style="color: black" asp-action="Index"><i class="icon-copy fa fa-reply" aria-hidden="true"></i> Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






                <script src="~/js/Clientes.js/ClienteCargarMunis.js"></script>
                <script>
                    $.ajax({
                        url: "/Cliente/MostrarToastDeExito",
                        type: "GET",
                        success: function (response) {
                            $("body").append(response);
                        }
                    });
                </script>



