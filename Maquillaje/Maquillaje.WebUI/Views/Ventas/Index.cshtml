@model IEnumerable<Maquillaje.WebUI.Models.VentasViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ven_Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ven_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ven_Empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.met_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.suc_Descripcion)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ven_Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ven_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ven_Empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.met_Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.suc_Descripcion)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ven_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ven_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ven_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
