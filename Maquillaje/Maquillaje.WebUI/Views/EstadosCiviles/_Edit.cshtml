

<Form action="@Url.Action("Edit","EstadosCiviles")" id="EditEst" method="post">

    <div class="modal fade" id="EditEsta" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="card-header" style="background-color:#ffd3d8">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Edite un Estado Civil</h3>
                    </div>
                </div>

                <div class="modal-body">
                    <br />
                    <input type="text" hidden id="txtEstId" name="est_ID" class="form-control" />
                    <label>Descripcion</label>
                    <input type="text" id="txtEstDescripcion" name="est_Descripcion" class="form-control" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" style="color: black" class="btn btn-primary"><i class="icon-copy fa fa-remove" aria-hidden="true"></i> Cancelar</button>
                    <button type="button" onclick="GuardarDatos()" class="btn btn-outline-secondary"> <i class="icon-copy fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                </div>
            </div>
            </div>
        </div>

</Form>
<script>

    function Editar(cadena) {
        var datastring = cadena;
        var data = datastring.split(',');
        $("#txtEstId").val(data[0]);
        $("#txtEstDescripcion").val(data[1]);
        $("#EditEsta").modal('show');
    };


    function GuardarDatos() {

        if ($("#txtEstDescripcion").val() == "") {
            mostrarErrorToast("Campos requeridos.");
            stop();
        }
        else {
            $('#EditEst').submit();
            mostrarSuccessToast("Se ha ingresado correctamente los datos.")

        }
    };

</script>