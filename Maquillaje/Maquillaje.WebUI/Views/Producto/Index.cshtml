@model IEnumerable<Maquillaje.WebUI.Models.ProductosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!string.IsNullOrEmpty(ViewBag.SuccessMessageScript))
{
    @Html.Raw(ViewBag.SuccessMessageScript)
}
<br />
<br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Listado Productos</h3>
                    </div>
                </div>
                <div class="card-body">

                    <a class="btn btn-primary btn-icon-text"  style="color: black"  asp-action="Create">
                        <i class="icon-copy fa fa-plus" aria-hidden="true"></i> Nuevo
                    </a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Codigo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_PrecioUnitario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cat_Descripcion)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_PrecioUnitario)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.cat_Descripcion)
                                     
                                    </td>
                                    <td>
                                        <a class="btn btn-primary " style="color: black" asp-action="Edit" asp-route-id="@item.pro_Id"><i class="icon-copy fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a> |
                                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.pro_Id"><i class="icon-copy fa fa-file-text-o" aria-hidden="true"></i> Detalles</a> |
                                        <a class="btn btn-outline-success"   style="color: black" onclick="ShowModal(@item.pro_Id)" data-id="@item.pro_Id"><i class="icon-copy fa fa-trash" aria-hidden="true"></i> Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>


@Html.Partial("_Delete");
