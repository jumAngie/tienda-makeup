@model IEnumerable<Maquillaje.WebUI.Models.ProductosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header">
                    <a class="btn btn-primary btn-icon-text" asp-action="Create">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Nuevo
                    </a>

                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm table-light" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Codigo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pro_PrecioUnitario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cat_Descripcion)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_PrecioUnitario)
                                    </td>
                                    <td>
                                        <span class="badge bg-label-primary">
                                            @Html.DisplayFor(modelItem => item.cat_Descripcion)
                                        </span>
                                    </td>
                                    <td>
                                        <a class="btn  btn-sm  btn-warning" asp-action="Edit" asp-route-id="@item.pro_Id">Editar</a> |
                                        <a class="btn  btn-sm  btn-success" asp-action="Details" asp-route-id="@item.pro_Id">Detalles</a> |
                                        <a class="btn-delete btn btn-danger" onclick="ShowModal(@item.pro_Id)" data-id="@item.pro_Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>


@Html.Partial("_Delete");
