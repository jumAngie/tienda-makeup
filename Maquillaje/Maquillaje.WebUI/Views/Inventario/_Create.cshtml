<!-- The Modal -->
<Form action="@Url.Action("Create","Inventario")" method="post">
    <div class="modal" id="CreateInve">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Crea un Inventario</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label class="form-text">Producto</label>
                            <select id="depto" name="inv_Producto" class="form-control" asp-items="ViewBag.producto"></select>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-text">Cantidad</label>
                            <input id="suc_Municipio" name="inv_Cantidad" class="form-control"/>
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-warning" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-success">Guardar</button>
                </div>

            </div>
        </div>
    </div>
</Form>
