@model IEnumerable<Maquillaje.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">


                <div class="card-body">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#CreateCate">Nuevo</a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.cat_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cat_Descripcion)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cat_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cat_Descripcion)
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-info" data-toggle="modal" data-target="#EditCate" onclick="Editar('@item.cat_Id,@item.cat_Descripcion')">Editar</a> |
                                        <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.cat_Id">Detalles</a> |
                                        <a class="btn btn-outline-danger" onclick="ShowModal(@item.cat_Id)" data-id="@item.cat_Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<br />



@Html.Partial("_Create")
@Html.Partial("_Edit")
@Html.Partial("_Delete")

