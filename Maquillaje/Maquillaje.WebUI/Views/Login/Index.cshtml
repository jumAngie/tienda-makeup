
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Animated Login Form</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <img class="wave" src="~/img/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/img/woman.gif">
        </div>
        <div class="login-content">
            <form href="@Url.Action("Index", "Login")" method="post">
                <img src="~/img/avatar.png">
                <h2 class="title">Welcome</h2>
                <span class="text-danger">@Html.ValidationMessage("General")</span>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input type="text" name="txtUsername" value="@ViewBag.usu_Nombre" class="input">
                        <span class="text-danger">@Html.ValidationMessage("username")</span>
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" name="txtPass" value="@ViewBag.usu_Clave" class="input">
                        <span class="text-danger">@Html.ValidationMessage("password")</span>
                    </div>
                </div>
                <a href="#">Forgot Password?</a>
                <button class="btn" value="Login">Iniciar Sesión</button>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/js/main.js"></script>
</body>
</html>
