@model IEnumerable<Maquillaje.WebUI.Models.UsuariosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Listado Usuarios</h3>
                    </div>
                </div>
                <div class="card-body">

                    <a class="btn btn-primary" data-toggle="modal" data-target="#CreateUsu">Nuevo</a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_Usuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Empleado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_EsAdmin)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Usuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Empleado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_EsAdmin)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" data-toggle="modal" data-target="#EditUsu" onclick="Editar('@item.usu_ID,@item.usu_Usuario')">Editar</a> |
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.usu_ID">Detalles</a> |
                                        <a class="btn btn-primary" onclick="ShowModal(@item.usu_ID)" data-id="@item.usu_ID">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@Html.Partial("_Create")
@*@Html.Partial("_Edit");*@
@Html.Partial("_Delete");
