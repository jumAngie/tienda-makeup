@model IEnumerable<Maquillaje.WebUI.Models.UsuariosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.usu_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usu_Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usu_EsAdmin)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usu_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usu_Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usu_EsAdmin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.usu_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.usu_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.usu_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
