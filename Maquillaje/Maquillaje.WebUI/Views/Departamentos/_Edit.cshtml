<!-- The Modal -->
<Form action="@Url.Action("Edit","Departamentos")" id="EditDepa" method="post">
    <div class="modal" id="EditDepo">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Edita un Departamento</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <label class="form-text">Descripcion</label>
                    <input type="text" hidden id="txtDepId" name="dep_ID" class="form-control" />
                    <input type="text" id="txtDepDescripcion" name="dep_Descripcion" class="form-control" />
                    <label id="ValidateDepto" hidden class="text-danger">Campo Requerido</label>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-warning" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-success" onclick="GuardarDatos()">Guardar</button>
                </div>

            </div>
        </div>
    </div>
</Form>

<script>

        function Editar(cadena) {
        var datastring = cadena;
        var data = datastring.split(',');
            $("#txtDepId").val(data[0]);
            $("#txtDepDescripcion").val(data[1]);
            $("#EditDepo").modal('show');
        };


    function GuardarDatos() {

        if ($("#txtDepDescripcion").val() == "") {
            $("#ValidateDepto").attr("hidden", false);
            stop();
        }
        else {
            $("#ValidateDepto").attr("hidden", true);
            $('#EditDepa').submit();
        }
    };

</script>