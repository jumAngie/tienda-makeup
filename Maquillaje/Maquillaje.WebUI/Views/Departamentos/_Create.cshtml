<!-- The Modal -->

<Form action="@Url.Action("Create","Categoria")" method="post" id="createdepto">

    <div class="modal fade" id="CreateDep" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">Cree un departamento</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <br />
                    <label>Descripcion</label>
                    <input type="text" class="form-control" id="dep" name="dep_Descripcion" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-outline-danger">Cancelar</button>
                    <button type="button" onclick="GuardarInsert()" class="btn btn-outline-success">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</Form>




<script>

    function GuardarInsert() {

        var siuu = true;

        $('#ValidateDeptoCreate').prop('hidden', true);

        if ($('#dep').val() == "") {
            mostrarErrorToast("Campos requeridos.");
            siuu = false;
            console.log(1);

        }

        if (siuu) {
            $('#createdepto').submit();
            mostrarSuccessToast("Se ha ingresado correctamente los datos.")

        }

    };

</script>

