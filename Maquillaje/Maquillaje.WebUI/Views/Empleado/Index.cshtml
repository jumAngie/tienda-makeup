@model IEnumerable<Maquillaje.WebUI.Models.EmpleadosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!string.IsNullOrEmpty(ViewBag.SuccessMessageScript))
{
    @Html.Raw(ViewBag.SuccessMessageScript)
}
<br />
<br />
<div class="col-lg-12 mb-0 order-0">
    <div class="card" style="background-color: white">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-header" style="background-color:#ffd3d8">
                    <div class="text-center">
                        <img src="~/Content/iMG/giphy.gif" width="100" />
                        <h3 style="color:black;font-family:'Segoe Print'">Listado Empleados</h3>
                    </div>
                </div>
                <div class="card-body">

                    <a class="btn btn-primary btn-icon-text" asp-action="Create">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Nuevo
                    </a>
                    <br />
                    <br />
                    <table class="table table-report -mt-2" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_DNI)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_Sexo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.emp_Sucursal)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_DNI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_Sexo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.emp_Sucursal)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-icon-text" asp-action="Edit" asp-route-id="@item.emp_ID">
                                            <i class="mdi mdi-reload btn-icon-prepend"></i>Editar
                                        </a> |
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.emp_ID">Detalles</a> |
                                        <a class="btn btn-primary btn-icon-text" asp-action="Delete" asp-route-id="@item.emp_ID">
                                            <i class="mdi mdi-alert btn-icon-prepend"></i>Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
